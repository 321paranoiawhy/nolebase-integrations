{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "declaration": false,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "./uno.config.ts",
    "./vite.config.ts"
  ]
}
